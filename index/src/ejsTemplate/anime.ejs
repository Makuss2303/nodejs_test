<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
    <%- include('../header') -%>
</head>
<body>
    <br>
    <!-- <%= anime_names %> -->
    <div class="container">
        <div class="mt-4">
          <div class="row">
            <% for(let i=0; i < anime_names.length; i++) { %>
                  <div class="col">
                      <div class="card">
                          <a href="/anime_names/<%= anime_names[i].slug %>">
                            <img src="<%= anime_names[i].image %>" class="card-img-top" alt="..." >
                          </a>
                          <div class="card-body">
                            <h5 class="card-title"><%= anime_names[i].name %></h5>
                            <p class="card-text"><%= anime_names[i].description %></p>
                          </div>
                      </div>
                  </div>
            <% } %>
          </div>
        </div>

        <div class="mt-4">
          <table class="table table-hover">
            <thead>
              <tr class="table-success">
                <th>Name</th>
                <th>Description</th>
                <th>Episode</th>
                <th>Image</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i=0; i < anime_names.length; i++) { %>
                <tr>
                  <td class="table-warning"><%= anime_names[i].name %></td>
                  <td class="table-warning"><%= anime_names[i].description %></td>
                  <td class="table-warning"><%= anime_names[i].episode %></td>
                  <td class="table-warning"><%= anime_names[i].image %></td>
                  <td class="table-warning">
                      <button type="button" class="btn btn-info">Detail</button>
                      <button type="button" class="btn btn-info">Edit</button>
                      <button type="button" class="btn btn-info">Delete</button>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
